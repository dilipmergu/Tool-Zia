<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    android:elevation="0dp"
    android:id="@+id/cvParent"
    app:cardCornerRadius="5dp"
    android:layout_margin="0dp">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_view"
            android:layout_width="130.00dp"
            android:scaleType="fitXY"
            android:layout_height="85.00dp"/>

        <TextView
            android:id="@+id/tv_cname"
            android:layout_toRightOf="@id/image_view"
            android:layout_marginLeft="8.00dp"
            android:textSize="14.00dp"
            android:textColor="#111111"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:fontFamily="sans-serif-medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_booked_by"
            android:layout_toRightOf="@id/image_view"
            android:layout_below="@+id/tv_cname"
            android:layout_marginLeft="8.00dp"
            android:textSize="12.00dp"
            android:textColor="#111111"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:fontFamily="sans-serif-medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_price"
            android:layout_toRightOf="@id/image_view"
            android:layout_below="@id/tv_booked_by"
            android:layout_marginLeft="8.00dp"
            android:textSize="12.00dp"
            android:textColor="#111111"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:fontFamily="sans-serif-medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_below="@id/image_view"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_accept"
                android:layout_margin="10.00dp"
                android:layout_weight="1"
                android:background="@drawable/button_rounded"
                android:textColor="#FFFFFF"
                android:textAllCaps="false"
                android:text="Accept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btn_reject"
                android:layout_margin="10.00dp"
                android:layout_weight="1"
                android:background="@drawable/button_rounded"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:text="Reject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>