<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E2F2FA"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TableLayout
        android:id="@+id/tlContactDetails"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView android:id="@+id/image_view"
            android:layout_width="100dp"

            android:layout_margin="10dp"
            android:src="@drawable/select_product_image"
            android:layout_gravity="center"
            android:layout_height="70dp" />

        <TableRow
            android:padding="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="15dp"
                android:textColor="#111111"
                android:layout_weight="0.2"
                android:text="Tool Name " />

            <EditText
                android:id="@+id/et_name"
                android:layout_weight="1"
                android:textSize="15dp"
                android:background="@drawable/edittext"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:textColor="#111111 "
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow
            android:padding="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="15dp"
                android:textColor="#111111"
                android:layout_weight="0.2"
                android:text="Price " />

            <EditText
                android:id="@+id/et_price"
                android:layout_weight="1"
                android:textSize="15dp"
                android:background="@drawable/edittext"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:textColor="#111111 "
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </TableRow>


        <TableRow
            android:padding="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="15dp"
                android:textColor="#111111"
                android:layout_weight="0.2"
                android:text="Description " />

            <EditText
                android:id="@+id/et_desc"
                android:layout_weight="1"
                android:textSize="15dp"
                android:background="@drawable/edittext"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:textColor="#111111 "
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow
            android:padding="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginLeft="15dp"
                android:textColor="#111111"
                android:layout_weight="0.2"
                android:text="Tool Condition  " />

            <Spinner
                android:id="@+id/spin_condition"
                android:singleLine="true"
                android:layout_weight="1"
                android:textSize="15dp"
                android:background="@drawable/edittext"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:textColor="#111111 "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/condition"
                android:scrollbars="none"
                android:spinnerMode="dropdown"/>
        </TableRow>


        <TableRow
            android:padding="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginLeft="15dp"
                android:textColor="#111111"
                android:layout_weight="0.2"
                android:text="Status  " />

            <Spinner
                android:id="@+id/spin_status"
                android:singleLine="true"
                android:layout_weight="1"
                android:textSize="15dp"
                android:background="@drawable/edittext"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:textColor="#111111 "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/status"
                android:scrollbars="none"
                android:spinnerMode="dropdown"/>

        </TableRow>



        <TableRow
            android:visibility="gone"
            android:padding="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="15dp"
                android:textColor="#111111"
                android:layout_weight="0.2"
                android:text="Category  " />

            <Spinner
                android:id="@+id/spin_category"
                android:singleLine="true"
                android:layout_weight="1"
                android:textSize="15dp"
                android:background="@drawable/edittext"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:textColor="#111111 "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/condition"
                android:scrollbars="none"
                android:spinnerMode="dropdown"/>

        </TableRow>


        <Button
            android:id="@+id/btn_update"
            android:text="Update Tool"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:background="@drawable/button_rounded" />





    </TableLayout>

</ScrollView>

